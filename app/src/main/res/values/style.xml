<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="general_tv_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/view_margin</item>
    </style>

    <style name="tv_header_style" parent="@style/general_tv_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="tv_medium_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_marginStart">@dimen/view_margin</item>
    </style>

    <style name="tv_small_style" parent="@style/general_tv_style">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="tv_medium_game_item">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_bar_design</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
    </style>

    <style name="rounded_image">
        <item name="cornerSize">@dimen/image_corner</item>
    </style>

    <style name="shapeable_image_view_style">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="upper_corner_rounded_image">
        <item name="cornerSizeTopLeft">@dimen/image_corner</item>
        <item name="cornerSizeTopRight">@dimen/image_corner</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_mode</item>
    </style>
</resources>