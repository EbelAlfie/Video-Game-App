<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.homeview.GameDetailActivity"
    android:background="@color/dark_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/detail_padding" >
        <include
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/custom_detail_toolbar"/>
        <ImageView
            android:id="@+id/iv_game_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            tools:src="@drawable/baseline_broken_image_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:ignore="ContentDescription"/>
        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            tools:text="Title"
            style="@style/tv_header_style"
            app:layout_constraintTop_toBottomOf="@id/iv_game_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/btn_library"/>

        <TextView
            android:id="@+id/tv_metacritic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5.4"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_game_title"
            android:layout_margin="@dimen/view_margin"/>

        <TextView
            android:id="@+id/tv_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview_title"
            style="@style/tv_header_style"
            app:layout_constraintTop_toBottomOf="@id/tv_metacritic"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_library"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_library_design"
            android:text="@string/add_to_library"
            android:drawableStart="@drawable/baseline_library_add_24"
            android:textSize="@dimen/small_text"
            android:padding="@dimen/detail_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_game_image"
            />

        <TextView
            android:id="@+id/tv_game_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/overview_title"
            style="@style/tv_small_style"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_genre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genres_title"
            style="@style/tv_medium_style"
            app:layout_constraintTop_toBottomOf="@id/tv_game_desc"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_game_genre"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            tools:text="genres"
            app:layout_constraintTop_toBottomOf="@id/tv_genre_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_platform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/platform_title"
            style="@style/tv_medium_style"
            app:layout_constraintTop_toTopOf="@id/tv_genre_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_genre_title"/>
        <TextView
            android:id="@+id/tv_game_platform"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            tools:text="platforms"
            android:layout_margin="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_platform_title"
            app:layout_constraintStart_toStartOf="@id/tv_platform_title"/>

        <TextView
            android:id="@+id/tv_released_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/released_date_title"
            style="@style/tv_medium_style"
            app:layout_constraintTop_toBottomOf="@id/tv_game_genre"
            app:layout_constraintTop_toTopOf="@id/tv_developer_title"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_game_released_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            tools:text="released date"
            app:layout_constraintTop_toBottomOf="@id/tv_released_date_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_age_rating_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_rating_title"
            style="@style/tv_medium_style"
            app:layout_constraintTop_toTopOf="@id/tv_publisher_title"
            app:layout_constraintTop_toBottomOf="@id/tv_game_released_date"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_game_age_rating"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            tools:text="age rating"
            app:layout_constraintTop_toBottomOf="@id/tv_age_rating_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_developer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer_title"
            style="@style/tv_medium_style"
            android:layout_margin="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_game_platform"
            app:layout_constraintStart_toStartOf="@id/tv_platform_title"/>
        <TextView
            android:id="@+id/tv_game_developer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            android:layout_margin="0dp"
            tools:text="developers"
            app:layout_constraintTop_toBottomOf="@id/tv_developer_title"
            app:layout_constraintStart_toStartOf="@id/tv_developer_title"/>

        <TextView
            android:id="@+id/tv_publisher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publisher_title"
            style="@style/tv_medium_style"
            android:layout_margin="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_game_developer"
            app:layout_constraintStart_toStartOf="@id/tv_platform_title"/>
        <TextView
            android:id="@+id/tv_game_publisher"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            android:layout_margin="0dp"
            tools:text="publishers"
            app:layout_constraintTop_toBottomOf="@id/tv_publisher_title"
            app:layout_constraintStart_toStartOf="@id/tv_publisher_title"/>
        <TextView
            android:id="@+id/tv_screenshot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screenshots_title"
            style="@style/tv_header_style"
            app:layout_constraintTop_toBottomOf="@id/tv_game_age_rating"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_image_slider"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/tv_screenshot_title"
            app:layout_constraintBottom_toTopOf="@id/tv_store_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_store_title"
            style="@style/tv_header_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vp_image_slider"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_store_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags_title"
            style="@style/tv_medium_style"
            app:layout_constraintTop_toBottomOf="@id/rv_list_store"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_game_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv_small_style"
            tools:text="tags"
            app:layout_constraintTop_toBottomOf="@id/tv_tag_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_dlc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dlc_title"
            style="@style/tv_medium_style"
            app:layout_constraintTop_toBottomOf="@id/tv_game_tags"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_dlc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_dlc_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>