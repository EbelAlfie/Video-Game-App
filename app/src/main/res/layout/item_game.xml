<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_games_design"
    android:layout_margin="@dimen/view_margin">
    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/tv_metacritic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster"
        android:layout_margin="@dimen/view_margin"/>
    <TextView
        android:id="@+id/tv_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster"
        tools:text="title"
        style="@style/tv_header_style" />
    <TextView
        android:id="@+id/tv_released_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="released data: dd-mm-yyyy"
        app:layout_constraintTop_toBottomOf="@id/tv_game_title"
        app:layout_constraintStart_toStartOf="@id/tv_game_title"/>
    <TextView
        android:id="@+id/tv_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="genrenya"
        app:layout_constraintTop_toBottomOf="@id/tv_released_date"
        app:layout_constraintStart_toStartOf="@id/tv_released_date" />
    <TextView
        android:id="@+id/tv_playtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="playtime"
        app:layout_constraintTop_toBottomOf="@id/tv_genres"
        app:layout_constraintStart_toStartOf="@id/tv_genres"/>
    <TextView
        android:id="@+id/tv_platforms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="platform"
        app:layout_constraintTop_toBottomOf="@id/tv_playtime"
        app:layout_constraintStart_toStartOf="@id/tv_playtime"/>
</androidx.constraintlayout.widget.ConstraintLayout>
