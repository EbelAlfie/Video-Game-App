<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_games_design"
    android:layout_margin="@dimen/view_margin"
    android:paddingBottom="@dimen/detail_padding">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_poster"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/upper_corner_rounded_image"
        android:src="@drawable/baseline_broken_image_24"
        tools:ignore="contentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster"
        tools:text="Title"
        style="@style/tv_header_style" />
    <TextView
        android:id="@+id/tv_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        style="@style/tv_medium_game_item"
        app:layout_constraintTop_toBottomOf="@id/tv_game_title"
        app:layout_constraintStart_toStartOf="@id/tv_game_title"/>
    <TextView
        android:id="@+id/tv_metacritic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/metacritic"
        style="@style/tv_medium_game_item"
        app:layout_constraintTop_toBottomOf="@id/tv_ratings"
        app:layout_constraintStart_toStartOf="@id/tv_ratings"/>
    <TextView
        android:id="@+id/tv_platforms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/platform"
        android:maxLines="2"
        android:ellipsize="end"
        style="@style/tv_medium_game_item"
        app:layout_constraintTop_toBottomOf="@id/tv_metacritic"
        app:layout_constraintStart_toStartOf="@id/tv_metacritic"/>
    <TextView
        android:id="@+id/tv_released_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/released_date"
        style="@style/tv_medium_game_item"
        app:layout_constraintTop_toBottomOf="@id/tv_platforms"
        app:layout_constraintStart_toStartOf="@id/tv_platforms"/>
    <TextView
        android:id="@+id/tv_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genre_genrenya"
        style="@style/tv_medium_game_item"
        app:layout_constraintTop_toBottomOf="@id/tv_released_date"
        app:layout_constraintStart_toStartOf="@id/tv_released_date" />
    <ImageButton
        android:id="@+id/btn_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_library_add_24"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/tv_genres"
        app:layout_constraintTop_toBottomOf="@id/tv_genres"
        tools:ignore="contentDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>
